@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>ActionName</title>
</head>
<body>
    <div>The controller is: @ViewBag.Controller</div>
    <div>The controller is: @ViewBag.Action</div>
    <div>
        @Url.Action("Index", "Home", new { id = "MyId" })
    </div>
    <div>
        @Html.ActionLink("A whole new area", "Index", new { area = "Admin", controller = "Home" })
    </div>
</body>
</html>
