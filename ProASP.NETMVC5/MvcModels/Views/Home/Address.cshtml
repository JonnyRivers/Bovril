@model IList<MvcModels.Models.AddressSummary>

@{
    ViewBag.Title = "Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Address</h2>
@if (Model.Count == 0)
{
    using (Html.BeginForm())
    {
        for (int i = 0; i < 3; i++)
        {
            <fieldset>
                <legend>Address @(i + 1)</legend>
                <div><label>City:</label>@Html.Editor(String.Format("[{0}].City", i))</div>
                <div><label>Country:</label>@Html.Editor(String.Format("[{0}].Country", i))</div>
            </fieldset>
            
        }
        <button type="submit">Submit</button>
    }
}
else
{
    foreach (MvcModels.Models.AddressSummary addressSummary in Model)
    {
        <p>@addressSummary.City, @addressSummary.Country</p>
    }
    @Html.ActionLink("Back", "Address");
}