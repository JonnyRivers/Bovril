@{
  Layout = null;
  ViewBag.Title = "Build System Weekly Stats";
}

<!DOCTYPE html>
<html>
<head>
  <title>Build System Weekly Stats</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="~/Content/Letters.css" rel="stylesheet" type="text/css" />
  <script src="~/Scripts/jquery-1.10.2.min.js"></script>
  <script src="~/Scripts/d3/d3.min.js"></script>
  <script src="~/Scripts/d3helpers.js"></script>
</head>

<body>
  <svg id="chart1" class="chart"></svg>
  <br />
  <br />
  <svg id="chart2" class="chart"></svg>

  <script>
    // Read JSON from the Home controller
    $.getJSON('@Url.Action("GetSuccessRate", "Home")', function (viewModel) {
      d3helpers.createOrdinalBarChart("#chart1", viewModel, 1000, 600);
    });

    $.getJSON('@Url.Action("GetWeeklyPerformance", "Home")', function (viewModel) {
      d3helpers.createOrdinalBoxPlotChart("#chart2", viewModel, 1000, 600);
    });

  </script>
</body>
</html>


