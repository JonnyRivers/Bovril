@{
  Layout = null;
  ViewBag.Title = "Letters";
}

<!DOCTYPE html>
<html>
<head>
  <title>Letters</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="~/Content/Letters.css" rel="stylesheet" type="text/css" />
  <script src="~/Scripts/jquery-1.10.2.min.js"></script>
  <script src="~/Scripts/d3/d3.min.js"></script>
  <script src="~/Scripts/d3helpers.js"></script>
</head>

<body>
  <svg id="chart1" class="chart"></svg>

  <script>
    // Read JSON from the Home controller
    $.getJSON('@Url.Action("GetLetterFrequencies", "Home")', function (letters) {
      d3helpers.createOrdinalBarChart("#chart1", letters, 1000, 600);
    });

  </script>
</body>
</html>


