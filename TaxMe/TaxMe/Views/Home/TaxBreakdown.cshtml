@using TaxMe.Models
@model TaxBreakdown

@{
    ViewBag.Title = "TaxBreakdown";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <p><label>Gross Annual Income</label>@Html.DisplayFor(m => m.GrossAnnualIncome)</p>
    <p><label>Taxable Gross Annual Income</label>@Html.DisplayFor(m => m.TaxableGrossAnnualIncome)</p>
    <table class="table table-bordered">
        <thead>
            <tr><th>Tax</th><th>Detail</th><th>Amount</th></tr>
        </thead>
        <tbody>
            @foreach (Tax tax in Model.Taxes)
            {
                foreach (TaxLine taxLine in tax.Lines)
                {
                    <tr>
                        <td>@taxLine.Name</td>
                        <td>@taxLine.Rate</td>
                        <td>@taxLine.Amount.ToString("c")</td>
                    </tr>
                }
                <tr>
                    <td>@tax.Name</td>
                    <td></td>
                    <td>@tax.Amount.ToString("c")</td>
                </tr>
            }
        </tbody>
    </table>
    <p><label>Total Tax</label>@Html.DisplayFor(m => m.TotalTax)</p>
    <p><label>Net Annual Income</label>@Html.DisplayFor(m => m.NetAnnualIncome)</p>
</div>